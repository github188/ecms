<body>
<div class="topbar-panel">
    <span class="pull-left">这是商机名称</span>
    <img src="../skins/img/del-icon.png" alt="" class="pull-right btn-closeit">
</div>
<ul class="nav nav-stacked sidebar-panel" role="tablist">
    <li><a href="#detailTab" id="frist" role="tab" data-toggle="tab">商机详情</a></li> 
    <li id="er"><a href="#contactTab" role="tab" data-toggle="tab">联系人</a></li>
    <li id="san" class="active"><a href="#followTab" role="tab" data-toggle="tab">跟进记录</a></li>
</ul>
<div class="tab-content tab-content-panel">
    <div class="tab-pane" id="detailTab">
        <div class="list-top">
            <h4 class="list-title">商机详情</h4>
        </div>
        <p class="handle-block" style="padding: 15px 0.5% 0 0.5%;">
            <a href="javascript:void(0);"  id="editBusiness" class="handle-btn btn-edit">编辑</a>
        </p>
        <div class="row form-inline edit-block" id="editblock">
            <div class="form-group col-sm-6">
                <label class="control-label">商机名称：</label>
                <input type="text" class="form-control on-border" name="oppName" id="oppName" readonly/>
            </div>
            <div class="form-group col-sm-6">
                <label class="control-label">负 责 人：</label>
                <input type="text" class="form-control on-border" name="cdCharge" id="cdCharge" readonly/>
            </div>
            <div class="form-group col-sm-6">
                <label class="control-label">客户名称：</label>
                <input type="text" class="form-control on-border" name="cdName" id="cdName" readonly/>
            </div>
            <div class="form-group col-sm-6">
                <label class="control-label">所属片区：</label>
                <input type="text" class="form-control on-border" name="cdArea" id="cdArea" readonly/>
            </div>
            <div class="form-group col-sm-6">
                <label class="control-label">预计销售金额：</label>
                <input type="text" class="form-control on-border" name="adSales" id="adSales" readonly/>
            </div>

            <div class="form-group col-sm-6">
                <label class="control-label">预计成交日期：</label>
                <input type="text" class="form-control on-border" name="adDealDate" id="adDealDate" readonly/>
            </div>

            <div class="form-group col-sm-6">
                <label class="control-label">销售阶段：</label>
                <input type="text" class="form-control on-border" name="saleStage" id="saleStage" readonly/>
            </div>

            <div class="form-group col-sm-6">
                <label class="control-label">意向项目：</label>
                <input type="text" class="form-control on-border" name="intItems" id="intItems" readonly/>
            </div>
            <div class="form-group col-sm-6">
                <label class="control-label">合作模式：</label>
                <input type="text" class="form-control on-border" name="coMode" id="coMode" readonly/>
            </div>

            <div class="form-group col-sm-12">
                <label class="control-label pro-desc-label">商机说明：</label>
                <span class="remark-cdetail" id="oppDesc"></span>
            </div>
        </div>
    </div>

    <div class="tab-pane" id="contactTab">
        <div class="list-top">
            <h4 class="list-title">联系人</h4>
            <div class="button-power-position" id="btnOfContactContain">
                <button class="btn btn-hollow" id="btnAddContact">新增联系人</button>
            </div>
        </div>
        <div id = "oppxsrow" class="the-options">
        </div>
    </div>
    <div class="tab-pane active" id="followTab">
        <div class="list-top">
            <h4 class="list-title">跟进记录</h4>
            <div class="button-power-position" id="btnOfFollowNoteContain">
                <button class="btn btn-hollow" id="btnAddFollowNote">新增跟进记录</button>
            </div>
        </div>
        <div class="the-options" id="followList">
            <div class="row form-inline the-option" data="followId">
                <p class="handle-block">
                    <span class="handle-text-lt follow-date">followdate</span>
                    <a href="javascript:void(0);" class="handle-btn btn-del">删除</a>
                    <a href="javascript:void(0);" class="handle-btn btn-edit">编辑</a>
                </p>
                <div class="form-group col-md-12">
                    <label class="control-label">跟进人：</label>
                    <input type="text" class="form-control on-border" value="personName" readonly/>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label">跟进形式：</label>
                    <input type="text" class="form-control on-border" value="follow_mode" readonly/>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label">跟进时间：</label>
                    <input type="text" class="form-control on-border" value="follow_time" readonly/>
                </div>
                <div class="form-group col-md-12 remark-block">
                    <label class="control-label pro-desc-label">跟进描述：</label>
                    <span class="remark-follow">follow_desc</span>
                </div>
                <div class="form-group col-sm-12 remark-block">
                    <label class="control-label pro-desc-label">跟进计划：</label>
                    <span class="remark-follow">next-plan</span>
                </div>
                <p class="comment-entry">
                    <a href="javascript:void(0);" onClick="htmlObj.showComment(this)" data="followId" class="comment-nocheck">follownums</a>
                </p>
               <div class="comment-contain">
                    <p class="sanjiao-block">
                        <i class="sanjiao"></i>
                    </p>
                    <div class="comment-block">
                        <!--1 级评论 begin-->
                        <div class="comment-reply-one">
                            <div class="cmt-r-l">
                                <img src="../skins/img/man-default.png" alt="" class="cmt-r-img ">
                            </div>
                            <div class="cmt-r-c">
                                <input type="text" class="form-control cmt-r-input">
                            </div>
                            <div class="cmt-r-r">
                                <button class="btn btn-hollow cmt-r-btn">评论</button>
                            </div>
                        </div>
                        <!--1 级评论 end-->
                        <!--1 级回复 begin-->
                        <div class="comment-list">
                            <div class="comment-option" data="oneComId">
                                <div class="co-left">
                                    <img src="../skins/img/man-default.png" alt="" class="cmt-r-img">
                                </div>
                                <div class="co-right">
                                    <span class="comment-name">oneAddPersonName</span>
                                    <span class="comment-content">xscontent</span>
                                    <p>
                                        <span class="comment-date">addTime</span>
                                        <span class="reply-span">回复</span>
                                    </p>
                                    <!--2~n 级回复 begin-->
                                    <div class="comment-contain-two">
                                        <p class="sanjiao-block">
                                            <i class="sanjiao-white"></i>
                                        </p>
                                        <div class="comment-reply-two">
                                            <div class="cmt-r-c">
                                				<input type="text" class="form-control cmt-r-input" value="">
                          				  </div>
                                            <div class="cmt-r-r-two">
                                                <button class="btn btn-hollow cmt-r-btn">评论</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="comment-subcount">
                                        <span class="color-fc5f45">comPersonName</span>
                                        <span class="subcount-or">等人</span>
                                        <span class="color-fc5f45">共comCount条回复</span>
                                    </div>
                                    <div class="comment-sub-list">
                                        <div class="comment-sub-option">
                                            <p>
                                                <span class="color-fc5f45">addpersonName</span>
                                                <span class="subcount-or">回复</span>
                                                <span class="color-fc5f45">parentUserName</span>
                                                <span class="" style="word-wrap: break-word;">xscontent</span>
                                            </p>
                                            <p class="overflow-hidden">
                                                <span class="pull-left reply-date-sub">addTime</span>
                                                <span class="pull-right reply-span-sub" data="comId">回复</span>
                                            </p>
                                        </div>
                                    </div>
                                    <!--2~n 级回复 end-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

